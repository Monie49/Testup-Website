<p id="notice"><%= notice %></p>

<h1>Exams</h1>

<table class='table'>
  <thead>
  <tr>
    <th>Exam Name</th>
    <th>Time</th>
    <th>Location</th>
    <th>Seats</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% curr_user.exams.each do |exam| %>
      <tr>
        <td><%= exam.course.name %></td>
        <td><%= exam.date %></td>
        <td><%= exam.location %></td>
        <td><%= exam.seats %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
